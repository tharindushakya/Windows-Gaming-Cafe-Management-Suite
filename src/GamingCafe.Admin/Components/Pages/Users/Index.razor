@page "/users/index"
@inject AdminApiService ApiService

<h3>Users</h3>

@if (users == null)
{
	<div class="text-muted">Loading users...</div>
}
else if (!users.Any())
{
	<div class="text-muted">No users found</div>
}
else
{
	<table class="table table-sm">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Name</th>
				<th>Role</th>
				<th>2FA</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var u in users)
			{
				<tr>
					<td>@u.UserId</td>
					<td>@u.Email</td>
					<td>@(u.FirstName + " " + u.LastName)</td>
					<td>@u.Role</td>
					<td>@(u.IsTwoFactorEnabled ? "Enabled" : "Disabled")</td>
				</tr>
			}
		</tbody>
	</table>
}

@code {
	private List<GamingCafe.Core.Models.User>? users;

	protected override async Task OnInitializedAsync()
	{
		users = await ApiService.GetAsync<List<GamingCafe.Core.Models.User>>("/api/users");
	}
}
