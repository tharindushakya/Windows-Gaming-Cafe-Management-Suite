<Window x:Class="GamingCafe.POS.Windows.DailyReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Daily Sales Report" Height="700" Width="1000" 
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="ðŸ“Š Daily Sales Report" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          Margin="20,0"/>
                          
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Label Content="Date:" Foreground="White" VerticalAlignment="Center"/>
                    <DatePicker x:Name="ReportDatePicker" VerticalAlignment="Center" Margin="5,0"/>
                    <Button Content="Load Report" Style="{StaticResource ModernButton}" Background="#27AE60" Click="LoadReport_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Summary Cards -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Total Sales Card -->
                    <Border Grid.Column="0" Background="#27AE60" CornerRadius="8" Margin="5" Padding="15">
                        <StackPanel>
                            <TextBlock Text="ðŸ’° Total Sales" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotalSalesText" Text="$0.00" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Total Transactions Card -->
                    <Border Grid.Column="1" Background="#3498DB" CornerRadius="8" Margin="5" Padding="15">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Total Transactions" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotalTransactionsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Average Sale Card -->
                    <Border Grid.Column="2" Background="#E74C3C" CornerRadius="8" Margin="5" Padding="15">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Average Sale" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="AverageSaleText" Text="$0.00" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Top Product Card -->
                    <Border Grid.Column="3" Background="#9B59B6" CornerRadius="8" Margin="5" Padding="15">
                        <StackPanel>
                            <TextBlock Text="ðŸ† Top Product" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TopProductText" Text="N/A" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Payment Methods -->
                <GroupBox Header="Payment Methods Breakdown" Margin="0,0,0,20">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ’µ Cash Payments" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Count: " FontWeight="Bold"/>
                                <TextBlock x:Name="CashCountText" Text="0"/>
                                <TextBlock Text=" | Amount: " FontWeight="Bold" Margin="10,0,0,0"/>
                                <TextBlock x:Name="CashAmountText" Text="$0.00"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ðŸ’³ Card Payments" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Count: " FontWeight="Bold"/>
                                <TextBlock x:Name="CardCountText" Text="0"/>
                                <TextBlock Text=" | Amount: " FontWeight="Bold" Margin="10,0,0,0"/>
                                <TextBlock x:Name="CardAmountText" Text="$0.00"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                
                <!-- Hourly Sales Chart -->
                <GroupBox Header="Hourly Sales Breakdown" Margin="0,0,0,20">
                    <ListView x:Name="HourlySalesListView" Height="200" Margin="15">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Hour" DisplayMemberBinding="{Binding Hour}" Width="80"/>
                                <GridViewColumn Header="Transactions" DisplayMemberBinding="{Binding TransactionCount}" Width="120"/>
                                <GridViewColumn Header="Total Sales" DisplayMemberBinding="{Binding TotalSales, StringFormat=C}" Width="120"/>
                                <GridViewColumn Header="Average Sale" DisplayMemberBinding="{Binding AverageSale, StringFormat=C}" Width="120"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
                
                <!-- Top Products -->
                <GroupBox Header="Top Selling Products" Margin="0,0,0,20">
                    <ListView x:Name="TopProductsListView" Height="200" Margin="15">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Rank" DisplayMemberBinding="{Binding Rank}" Width="60"/>
                                <GridViewColumn Header="Product Name" DisplayMemberBinding="{Binding ProductName}" Width="200"/>
                                <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}" Width="120"/>
                                <GridViewColumn Header="Quantity Sold" DisplayMemberBinding="{Binding QuantitySold}" Width="120"/>
                                <GridViewColumn Header="Total Revenue" DisplayMemberBinding="{Binding TotalRevenue, StringFormat=C}" Width="120"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
                
                <!-- All Transactions -->
                <GroupBox Header="All Transactions">
                    <ListView x:Name="TransactionsListView" Height="300" Margin="15">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}" Width="80"/>
                                <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="250"/>
                                <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount, StringFormat=C}" Width="100"/>
                                <GridViewColumn Header="Payment Method" DisplayMemberBinding="{Binding PaymentMethod}" Width="120"/>
                                <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="#34495E" BorderThickness="0,1,0,0" BorderBrush="#2C3E50">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0">
                <Button Content="ðŸ“„ Export to CSV" Style="{StaticResource ModernButton}" Background="#F39C12" Click="ExportReport_Click"/>
                <Button Content="ðŸ–¨ï¸ Print Report" Style="{StaticResource ModernButton}" Background="#27AE60" Click="PrintReport_Click"/>
                <Button Content="Close" Style="{StaticResource ModernButton}" Background="#95A5A6" Click="Close_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
