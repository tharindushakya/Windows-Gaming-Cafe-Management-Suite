<Window x:Class="GamingCafe.POS.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="GamingCafe POS" Height="700" Width="1000">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*" />
			<ColumnDefinition Width="2*" />
		</Grid.ColumnDefinitions>

		<!-- Left: Products -->
		<StackPanel Grid.Column="0" Margin="10">
			<TextBlock x:Name="CurrentStationText" FontWeight="Bold" />
			<TextBlock x:Name="CurrentTimeText" HorizontalAlignment="Right" />
			<ItemsControl x:Name="ProductsItemsControl" Margin="0,10,0,0">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Border BorderThickness="1" BorderBrush="#CCC" Padding="8" Margin="4">
							<StackPanel>
								<TextBlock Text="{Binding Name}" FontWeight="Bold" />
								<TextBlock Text="{Binding Price, StringFormat=C}" />
							</StackPanel>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</StackPanel>

		<!-- Right: Cart & actions -->
		<StackPanel Grid.Column="1" Margin="10">
			<TextBlock Text="Cart" FontSize="16" FontWeight="Bold" />
			<ListView x:Name="CartListView" Height="300" Margin="0,6,0,6" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
				<TextBlock Text="Subtotal: " />
				<TextBlock x:Name="SubtotalText" Width="120" TextAlignment="Right" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
				<TextBlock Text="Tax: " />
				<TextBlock x:Name="TaxText" Width="120" TextAlignment="Right" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
				<TextBlock Text="Total: " FontWeight="Bold" />
				<TextBlock x:Name="TotalText" Width="120" TextAlignment="Right" FontWeight="Bold" />
			</StackPanel>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
				<Button x:Name="SelectCustomerButton" Content="Select Customer" Padding="8" Margin="4" Click="SelectCustomerButton_Click" />
				<Button x:Name="SettingsButton" Content="Settings" Padding="8" Margin="4" Click="SettingsButton_Click" />
			</StackPanel>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
				<Button x:Name="ProcessPaymentButton" Content="Process Payment" Padding="10" Click="ProcessPayment_Click" />
				<Button x:Name="ClearCartButton" Content="Clear Cart" Padding="10" Margin="8,0,0,0" Click="ClearCart_Click" />
			</StackPanel>
		</StackPanel>

		<!-- Settings overlay host -->
		<Grid x:Name="SettingsOverlay" Visibility="Collapsed" Background="#80000000">
			<Border Width="700" Height="500" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
				<ContentControl x:Name="SettingsContentHost" />
			</Border>
		</Grid>
	</Grid>
</Window>
