<Window x:Class="GamingCafe.POS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamingCafe.POS"
        mc:Ignorable="d"
        Title="Gaming Café POS System" Height="720" Width="1280" WindowState="Maximized">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" BorderThickness="0,0,0,2" BorderBrush="#34495E">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="🎮 Gaming Café POS" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CurrentStationText" Text="Station: Loading..." FontSize="14" Foreground="#BDC3C7" Margin="20,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock x:Name="CurrentTimeText" Text="12:00:00" FontSize="14" Foreground="White" Margin="0,0,20,0" VerticalAlignment="Center"/>
                    <Button Content="Settings" Style="{StaticResource ModernButton}" Background="#27AE60" Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Products -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Products &amp; Services" Style="{StaticResource HeaderText}"/>
                    
                    <!-- Categories -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                        <Button Content="All" Style="{StaticResource ModernButton}" Click="CategoryButton_Click" Tag="All"/>
                        <Button Content="Beverages" Style="{StaticResource ModernButton}" Click="CategoryButton_Click" Tag="Beverages"/>
                        <Button Content="Food" Style="{StaticResource ModernButton}" Click="CategoryButton_Click" Tag="Food"/>
                        <Button Content="Accessories" Style="{StaticResource ModernButton}" Click="CategoryButton_Click" Tag="Accessories"/>
                        <Button Content="Gaming Time" Style="{StaticResource ModernButton}" Background="#E74C3C" Click="CategoryButton_Click" Tag="Gaming"/>
                    </StackPanel>
                    
                    <!-- Products Grid -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ProductsItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#ECF0F1" CornerRadius="5" Margin="5" Padding="10" Cursor="Hand" MouseLeftButtonUp="ProductCard_Click">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12" TextWrapping="Wrap" Height="30"/>
                                            <TextBlock Text="{Binding Category}" FontSize="10" Foreground="Gray" Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding Price, StringFormat=C}" FontSize="14" FontWeight="Bold" Foreground="#E74C3C" Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding StockQuantity, StringFormat='Stock: {0}'}" FontSize="10" Foreground="Gray"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Right Panel - Cart &amp; Payment -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Current Sale" Style="{StaticResource HeaderText}"/>
                    
                    <!-- Cart Items -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                        <ListView x:Name="CartListView" BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" TextWrapping="Wrap" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Quantity}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Total, StringFormat=C}" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold"/>
                                        <Button Grid.Column="3" Content="×" Width="18" Height="18" FontSize="12" Background="#E74C3C" Foreground="White" BorderThickness="0" Click="RemoveItem_Click" Cursor="Hand"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                    
                    <!-- Total -->
                    <Border Grid.Row="2" Background="#2C3E50" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Subtotal:" Foreground="White"/>
                                <TextBlock Grid.Column="1" x:Name="SubtotalText" Text="$0.00" Foreground="White"/>
                            </Grid>
                            
                            <Grid Grid.Row="1" Margin="0,2,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Tax:" Foreground="White"/>
                                <TextBlock Grid.Column="1" x:Name="TaxText" Text="$0.00" Foreground="White"/>
                            </Grid>
                            
                            <Grid Grid.Row="2" Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Total:" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Grid.Column="1" x:Name="TotalText" Text="$0.00" Foreground="White" FontWeight="Bold" FontSize="16"/>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- Payment Buttons -->
                    <StackPanel Grid.Row="3">
                        <Button Content="💳 Process Payment" Style="{StaticResource ModernButton}" Background="#27AE60" FontSize="16" Padding="0,10" Click="ProcessPayment_Click"/>
                        <Button Content="🗑️ Clear Cart" Style="{StaticResource ModernButton}" Background="#E74C3C" Margin="0,5,0,0" Click="ClearCart_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#34495E" BorderThickness="0,2,0,0" BorderBrush="#2C3E50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="Ready" Foreground="#2ECC71" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" Text="System Online" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Button Content="📊 Daily Report" Style="{StaticResource ModernButton}" Background="#9B59B6" Click="DailyReport_Click"/>
                    <Button Content="⚙️ Station Control" Style="{StaticResource ModernButton}" Background="#F39C12" Click="StationControl_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
