{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "RequestResponse": {
      "Enabled": false,
      "MaxBodySize": 4096,
      "ExcludePaths": [ "/health", "/metrics", "/swagger" ],
      "SamplingRate": 0.01,
      "IncludePaths": [],
      "Paths": {
        "/api/notify": { "Enabled": false },
        "/api/orders": { "Enabled": true, "SamplingRate": 0.05 }
      }
    }
  },
  "RateLimiting": {
    "Prefix": "local",
    "Limit": 20,
    "WindowSeconds": 60,
    "Whitelist": [ "127.0.0.1", "::1" ],
    "ExemptPaths": [ "/health", "/metrics" ],
    "Overrides": {
      "/api/auth": { "Limit": 10, "WindowSeconds": 60 },
      "/api/admin": { "Limit": 5, "WindowSeconds": 60 }
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=GamingCafeDB;Username=gamingcafe;Password=password123",
    "Hangfire": "Host=localhost;Database=GamingCafeHangfire;Username=gamingcafe;Password=password123",
    "Redis": "localhost:6379"
  },

  "Jwt": {
    "Key": "dev-very-long-local-key-please-replace-with-env-or-keyvault-!2025-CHANGEME-xxxxxxxx",
    "Issuer": "GamingCafeLocal",
    "Audience": "GamingCafeLocal",
    "DevKeyNote": "Development-only key. Replace with secure env var or KeyVault for production."
  },

  "DataProtection": {
    "UseRedis": false
  },

  "Hangfire": {
    "UsePostgres": false,
    "DashboardPath": "/hangfire"
  }
}
