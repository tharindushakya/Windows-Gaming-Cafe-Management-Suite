    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Key": "GamingCafeSecretKey2024!@#$%^&*()_+",
    "Issuer": "GamingCafeAPI",
    "Audience": "GamingCafeClients"
  },
  "Email": {
    "SmtpHost": "localhost",
    "SmtpPort": "587",
